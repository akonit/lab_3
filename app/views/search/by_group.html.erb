<h1>Поиск расписания по группам </h1>
<%= link_to 'Перейти к списку факультетов', facultys_path %><br><br>

<%= form_tag(search_by_group_result_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", 
            placeholder: "Введите название группы"%>
        <%= submit_tag "Искать", :name => nil %>
    </div>
<% end %>
